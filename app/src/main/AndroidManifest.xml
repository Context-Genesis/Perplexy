<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rohanx96.admobproto" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="DATABASE"
            android:value="sugar_orm.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.rohanx96.admobproto.elements" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.QuestionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/QuestionsActivityTheme" />
        <activity
            android:name=".ui.NumberLineActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NumberLineTheme" />
        <activity android:name=".ui.CharacterStore" >
        </activity>
        <activity android:name=".ui.AboutActivity" >
        </activity>
        <activity android:name=".ui.LoadingActivity" >
        </activity>
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_number_line_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_d_ebony_clay"
    tools:context="com.example.bhutanidhruv16.logic.NumberLine">


    <ListView
        android:id="@+id/activity_number_line_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="20dp"
        android:padding="16dp"></ListView>


    <TextView
        android:id="@+id/activity_number_line_textview"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
        android:background="#88ffffff" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/center_of_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/center_of_screen"
        android:gravity="center"
        android:text="Statistics"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_of_screen"
        android:paddingTop="5dp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:numColumns="2"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:gravity="center"
                android:padding="8dp"
                android:text="COINS   500"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="EARNED\n700"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="SPENT\n200"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_row="2"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:text="ANSWERED   500"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/orange_d_zest" />
            <TextView
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="8dp"
                android:text="CORRECT\n300"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/orange_d_zest" />

            <TextView
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="3"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="INCORRECT\n200"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/orange_d_zest" />
            <TextView
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_row="4"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:text="ACCURACY   60%"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/blue_l_lynch" />
        </GridLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_d_grey"
    tools:context="com.contextgenesis.perplexy.ui.CharacterStore">

    <RelativeLayout
        android:id="@+id/store_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/store_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="5dp"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/store_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Store"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/store_coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/store_coin_image"
            android:layout_alignRight="@+id/store_coin_image"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_oval"
            android:gravity="center_vertical"
            android:paddingEnd="35dp"
            android:paddingLeft="8dp"
            android:paddingRight="35dp"
            android:paddingStart="8dp"
            android:text="500"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/store_coin_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/coin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/store_by_me"
        android:layout_below="@+id/store_rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/character_happy_closed_128" />

        <ImageView
            android:id="@+id/store_speech_bubble"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_toEndOf="@+id/store_image"
            android:layout_toRightOf="@+id/store_image"
            android:src="@drawable/speech_bubble_white" />

        <ImageView
            android:id="@+id/store_lock_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/store_image"
            android:layout_centerHorizontal="true"
            android:alpha="0.8"
            android:src="@drawable/lock_flat" />

        <ImageView
            android:id="@+id/store_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/less_than" />

        <ImageView
            android:id="@+id/store_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/greater_than" />

        <TextView
            android:id="@+id/store_character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="My Name"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/store_horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/store_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/storeCharacterOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="Good Bwoy"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/character_happy_closed_128" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/storeCharacterOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="Super Hero"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/monster_eyes_closed" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/storeCharacterOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="Box Cartoon"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/human_happy_open" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/storeCharacterOption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:text="Minions"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/character_happy_closed_128" />
            </LinearLayout>


        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/store_by_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/store_horizontal_scroll"
        android:layout_centerHorizontal="true"
        android:text="Buy Me!" />

</RelativeLayout>

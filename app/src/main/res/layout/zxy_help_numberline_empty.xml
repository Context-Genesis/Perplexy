<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_number_line_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_background_color"
    tools:context="com.example.bhutanidhruv16.logic.NumberLine">

    <ImageView
        android:id="@+id/activity_number_line_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:contentDescription="Back"
        android:padding="5dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/activity_number_line_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_number_line_back"
        android:layout_alignTop="@id/activity_number_line_back"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Level 10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_coin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_coin_image"
        android:layout_alignBottom="@id/activity_number_line_back"
        android:layout_alignEnd="@+id/activity_coin_image"
        android:layout_alignRight="@+id/activity_coin_image"
        android:layout_alignTop="@id/activity_number_line_back"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_oval"
        android:gravity="center_vertical"
        android:paddingEnd="35dp"
        android:paddingLeft="8dp"
        android:paddingRight="35dp"
        android:paddingStart="8dp"
        android:text="500"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/activity_coin_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/coin" />

    <include
        android:id="@+id/include2"
        layout="@layout/element_number_line_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_number_line_title" />

    <include
        android:id="@+id/include3"
        layout="@layout/element_number_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include2" />

    <include
        android:id="@+id/include5"
        layout="@layout/element_number_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include3" />

    <TextView
        android:id="@+id/activity_number_line_textview"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_number_line_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
        android:background="#88ffffff" />

    <include
        android:id="@+id/include4"
        layout="@layout/element_number_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include5"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/include7"
        layout="@layout/element_number_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include4"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/include6"
        layout="@layout/element_number_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include7"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/include9"
        layout="@layout/element_number_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/include6"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/include8"
        layout="@layout/element_number_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include9"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/include11"
        layout="@layout/element_number_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include8"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/include10"
        layout="@layout/element_number_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include11"
        android:layout_centerHorizontal="true" />

    <include
        layout="@layout/element_number_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include10"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/activity_number_line_textview"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/activity_number_line_textview"
        android:layout_toStartOf="@+id/activity_number_line_textview"
        android:src="@drawable/circled" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/help_main"
    android:layout_height="match_parent"
    android:background="@color/blue_d_grey"
    tools:context="com.contextgenesis.perplexy.ui.HelpActivity">

    <RelativeLayout
        android:id="@+id/help_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/help_ll">

        <ImageView
            android:id="@+id/help_im0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tutorial1"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help_ll"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_border"
        android:elevation="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:src="@drawable/character_happy_closed_128" />

        <TextView
            android:id="@+id/help_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="bottom"
            android:layout_toEndOf="@+id/help_prev"
            android:layout_toLeftOf="@+id/help_next"
            android:scrollbars="vertical"
            android:maxLines="10"
            android:layout_toRightOf="@+id/help_prev"
            android:layout_toStartOf="@+id/help_next"
            android:gravity="center"
            android:text="Some Text Here"
            android:textColor="@color/black_d_material"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help_next"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/right" />

        <ImageView
            android:id="@+id/help_prev"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView5"
            android:src="@drawable/left" />

    </RelativeLayout>

</RelativeLayout>

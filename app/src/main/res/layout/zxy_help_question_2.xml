<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questions_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_light_background_color"
    android:clipChildren="false"
    tools:context="link.fls.swipestacksample.MainActivity">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/first_light_background_color"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/questions_activity_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="5dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/questions_activity_coin_text"
            android:layout_toRightOf="@id/questions_activity_back"
            android:gravity="center">

            <ImageView
                android:id="@+id/questions_activity_correct_indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/questions_activity_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Level 10"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/questions_activity_coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/questions_activity_coin_image"
            android:layout_alignRight="@+id/questions_activity_coin_image"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_oval"
            android:gravity="center_vertical"
            android:paddingEnd="35dp"
            android:paddingLeft="8dp"
            android:paddingRight="35dp"
            android:paddingStart="8dp"
            android:text="500"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/questions_activity_coin_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/coin" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/questions_activity_bubble"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:elevation="7dp"
        android:src="@drawable/character_happy_closed_128" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:background="@color/first_light_background_color">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/question_card"
            cardCornerRadius="@dimen/card_corner_radius"
            cardElevation="@dimen/elevation_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
                android:id="@+id/question_card_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ScrollView
                    android:id="@+id/textAreaScroller"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/qcard_mcq_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/dummy_question_2"
                        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                        android:textColor="@color/black_overlay"
                        android:textStyle="bold" />
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/navigating_fragments"
                    android:layout_below="@id/textAreaScroller">

                    <LinearLayout
                        android:id="@+id/qcard_mcq_options_ll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/qcard_mcq_option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="Played Music"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

                        <TextView
                            android:id="@+id/qcard_mcq_option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qcard_mcq_option1"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="Discovered the theory of everything"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

                        <TextView
                            android:id="@+id/qcard_mcq_option3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qcard_mcq_option2"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="Was a famous footballer"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />

                        <TextView
                            android:id="@+id/qcard_mcq_option4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qcard_mcq_option3"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="Was a philospher"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@drawable/circled" />

                    <Button
                        android:id="@+id/canvas_pull"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/palette" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/navigating_fragments"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true">

                    <ImageButton
                        android:id="@+id/qcard_mcq_previous"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/left" />

                    <ImageButton
                        android:id="@+id/qcard_mcq_next"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</RelativeLayout>
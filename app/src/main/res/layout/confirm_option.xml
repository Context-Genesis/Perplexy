<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background">

    <TextView
        android:id="@+id/center_divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/no_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/center_divider"
        android:gravity="center"
        android:text="NO"
        android:textColor="@color/red_l_alizarin"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>

    <TextView
        android:id="@+id/yes_answer"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/center_divider"
        android:gravity="center"
        android:text="YES"
        android:textColor="@color/green_l_jade"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>

</RelativeLayout>